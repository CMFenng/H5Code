/* pages/recommend/recommend.wxss */
.header{
	display: flex;
	/*横向居中对齐*/
	justify-content:center;
	border-bottom: 2rpx solid #ccc;
	margin-bottom: 10rpx;
}
.headerText{
	padding: 20rpx 40rpx;
	color: #999;
	font-size: 40rpx;
	text-align:center;
}
.movieList{
	display: flex;
	height: 1000rpx;
	flex-direction:column;
}
.movieItem{
	display: flex;
	padding: 20rpx 40rpx;
	border-bottom: 2rpx solid #eee;
}
.movieItem .movieImg{
	width: 128rpx;
	height: 128rpx;
	margin-right: 20rpx;
}
.movieItem text{
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.movieItem .movieInfo{
	flex:1;
	width: 400rpx;
}
.movieItem .title,.movieItem .sub-title{
	display: block;
	margin-bottom: 14rpx;
}
.movieItem .title{
	font-size: 35rpx;
}
.movieItem .sub-title{
	font-size: 30rpx; 
	color: #c0c0c0;
}
.movieItem .directors{
	font-size: 34rpx;
	color: #999;
}
.movieItem .movieAverage{
	font-size: 35rpx;
	font-weight: bold;
	color: red;
}