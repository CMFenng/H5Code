/**index.wxss**/
.img_style{
    width: 100%;
}
.nav{
    display: flex;
    flex-flow: row wrap;
    justify-content: space-around;
	padding-bottom: 1rem;
}
.nav_logo{
    width: 15%;
    height: 120rpx;
    /*border: 1px solid blue;*/
    padding-top: 3%;
    flex-direction: column;
}
.nav_logo image{
    width: 100%;
    height: 80%;
}
.nav_logo text{
    font-size: 0.7rem;
    margin-left: 25rpx;
}



.container {
	display: flex;
  	flex-direction: column;
  	align-items: stretch;
  	box-sizing: border-box;
	background: #f5f5f5;
	padding-top: 10rpx;
}

.block {
	display: flex;
	flex-direction: row;
	width: 100%;
	height: 150rpx;
	margin-bottom: 10rpx; 
}

.left {
	width: 20%;
	height: 100%;
	padding: 5rpx;
	box-sizing: border-box;
}

.left image {
	width: 100%;
	height: 100%;
}

.right {
	flex: 1;
	height: 100%;
	border-bottom: 1px solid #eee;
	box-sizing: border-box;
	display: flex;
}

.content {
	padding: 10rpx;
	height: 100%;
	width: 90%;
	box-sizing: border-box;
}

.play {
	flex: 1;
	height: 100%;
	box-sizing: border-box;
	margin-right: 20rpx;
	display: flex;
	flex-direction: row;
  	align-items: center;
}

.play image {
	width: 28px;
	height: 28px;
}

.content view {
	width: 100%;
	margin-bottom: 20rpx;
	/*overflow: hidden;*/
}

.song-name {
	font-size: 18px;
}

.song-artists {
	font-size: 14px;
	color: #999;
}
